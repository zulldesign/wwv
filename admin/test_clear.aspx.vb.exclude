Imports db_acc_wpdn_v17
Imports fn_general_v30
Imports html_tidy_v10


Partial Class hc_admin_test_clear
    Inherits System.Web.UI.Page

    Protected Sub Button1_Click(ByVal sender As Object, ByVal e As System.EventArgs) Handles Button1.Click
        Oku()
    End Sub
    Sub Oku()
        Dim TblName = "content"
        Dim ColName = "[id],content"
        'Dim WhereSTR = " id=3131"

        Dim DR As System.Data.OleDb.OleDbDataReader
        DR = DB_SELECT(TblName, ColName)

        Dim MySTR
        While DR.Read = True
            MySTR = DR.GetValue(1).ToString
            For i = 1 To 20
                MySTR = Replace(MySTR, vbCrLf, "")
            Next

            If MySTR <> "" Then MySTR = HTML_Tidy(MySTR)


            Yaz(DR.GetValue(0).ToString, MySTR)

        End While
        DR.Close() : DB_CONN_CLOSE()

        'Dim i


        'TextBox1.Text = MySTR
    End Sub

    Sub Yaz(ByVal MyID, ByVal MySTR)
        Dim Q(50)

        Q(1) = DB_ClearText(MySTR)



        Dim TblName = "content"
        Dim ColName = "content"
        Dim ValName = "'" & Q(1) & "'"
        Dim WhereStr = "[id]=" & MyID & ""

        DB_UPDATE(TblName, ColName, ValName, WhereStr, "YES")
    End Sub
End Class
