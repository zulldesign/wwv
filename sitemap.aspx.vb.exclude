        Dim RssUpdateFreq = "1"

        Dim MySTR = "", i
        Dim KS = DS.Tables(0).Rows.Count - 1 'Kayıt Sayısı
        If KS > 0 Then
            For i = 0 To KS

                Dim conf_name = DS.Tables(0).Rows(i)("conf_name") : Dim conf_value = DS.Tables(0).Rows(i)("conf_value")
