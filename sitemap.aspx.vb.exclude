    Public Shared Function aTitle(ByVal LinkName)
        LinkName = Replace(LinkName, "'", "")
        LinkName = Replace(LinkName, Chr(34), "")
        LinkName = Replace(LinkName, ")", "")
        LinkName = Replace(LinkName, "(", "")
        LinkName = Replace(LinkName, ".", "")
        LinkName = Replace(LinkName, ",", "")
        LinkName = Trim(LinkName)
        Return LinkName
    End Function
